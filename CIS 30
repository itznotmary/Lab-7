sales = []
for i in range(7):
sale = float(input(f"Enter sales for day {i+1}: "))
 sales.append(sale)
total_sales = sum(sales)
print(f"Total sales for the week: ${total_sales:.2f}")


import random
lottery_numbers = []
for _ in range(7):
    number = random.randint(0, 9)
    lottery_numbers.append(number)
print("Lottery number:", ''.join(map(str, lottery_numbers)))
print("Contents of the list:")
for number in lottery_numbers:
    print(number)


rainfall = []
for i in range(12):
    amount = float(input(f"Enter the total rainfall for month {i+1}: "))
    rainfall.append(amount)
total_rainfall = sum(rainfall)
average_rainfall = total_rainfall / 12
highest_rainfall = max(rainfall)
lowest_rainfall = min(rainfall)
highest_month = rainfall.index(highest_rainfall) + 1
lowest_month = rainfall.index(lowest_rainfall) + 1
print(f"Total rainfall for the year: {total_rainfall:.2f} inches")
print(f"Average monthly rainfall: {average_rainfall:.2f} inches")
print(f"Month with the highest rainfall: Month {highest_month} with {highest_rainfall:.2f} inches")
print(f"Month with the lowest rainfall: Month {lowest_month} with {lowest_rainfall:.2f} inches")



numbers = []
for i in range(20):
    number = float(input(f"Enter number {i+1}: "))
    numbers.append(number)
lowest_number = min(numbers)
highest_number = max(numbers)
total = sum(numbers)
average = total / 20
print(f"Lowest number: {lowest_number}")
print(f"Highest number: {highest_number}")
print(f"Total of the numbers: {total}")
print(f"Average of the numbers: {average:.2f}")


def display_greater_numbers(numbers_list, n):
    for number in numbers_list:
        if number > n:
            print(number)
numbers = [10, 20, 30, 40, 50]
n = 25
display_greater_numbers(numbers, n)


def grade_exam(correct_answers, user_answers):
    score = 0
    incorrect_questions = []
    for i in range(len(correct_answers)):
        if correct_answers[i] == user_answers[i]:
            score += 1
        else:
            incorrect_questions.append(i + 1)
    return score, incorrect_questions
def read_answers_from_file(filename):
    with open(filename, 'r') as file:
        answers = file.read().splitlines()
    return answers
correct_answers = ['A', 'B', 'C', 'D', 'A', 'B', 'C', 'D', 'A', 'B', 'C', 'D', 'A', 'B', 'C', 'D', 'A', 'B', 'C', 'D']
user_answers = read_answers_from_file('user_answers.txt')
score, incorrect_questions = grade_exam(correct_answers, user_answers)
print(f'Your score is: {score}/20')
if score >= 15:
    print("Congratulations! You passed the exam.")
else:
    print("Sorry, you did not pass the exam.")
print(f'Total correct answers: {score}')
print(f'Total incorrect answers: {20 - score}')
print(f'Questions answered incorrectly: {incorrect_questions}')


def read_names_from_file(filename):
    with open(filename, 'r') as file:
        names = file.read().splitlines()
    return names
def check_name_in_list(names_list, name):
    if name in names_list:
        print(f'{name} was among the most popular names.')
    else:
        print(f'{name} was not among the most popular names.')
names_list = read_names_from_file('popular_names.txt')
user_name = input('Enter a name to check: ')
check_name_in_list(names_list, user_name)










